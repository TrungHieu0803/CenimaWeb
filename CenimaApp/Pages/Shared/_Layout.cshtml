@using Models;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CenimaApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    @{
        var u = TempData["User"] as Person;
        
    }
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Movies/Index">CenimaApp</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="./Peoples">Privacy</a>
                        </li>
                    </ul>
                    @{
                        if (u == null)
                        {
                            <a class="nav-link text-black-50" asp-area="" asp-page="/Peoples/Create">Register</a>
                            <a class="nav-link text-black-50" asp-area="" asp-page="/Peoples/Login">Login</a>
                        }
                        else
                        {
                            @if (u.Type == 2)
                            {
                                <div class="dropdown">
                                    <a class="nav-link text-black-50 dropdown-toggle" id="dropdownMenuButton"
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                           asp-area="">AdminPage</a>
                                    <div class="dropdown-menu bg-primary" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item text-black-50" href="/Movies/List">Movie Management</a>
                                        <a class="dropdown-item text-black-50" href="/Peoples/Index">User Management</a>

                                    
                                    </div>
                                </div>
                            }
                            <div class="dropdown">
                                <a class="nav-link text-black-50 dropdown-toggle" id="dropdownMenuButton"
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
                           asp-area="">Welcome, @u.Fullname</a>
                               
                            </div>
                            <a class="nav-link text-black-50" asp-area="" asp-page="/Logout">Log Out</a>
                        }
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - CenimaApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
